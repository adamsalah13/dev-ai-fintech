{
  "name": "payflow-fintech-app",
  "version": "1.0.0",
  "description": "Sample fintech application for AI-driven development learning",
  "main": "backend/api-gateway/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend/api-gateway && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "npm run build:services",
    "build:services": "concurrently \"npm run build:user\" \"npm run build:payment\" \"npm run build:transaction\"",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=tests/jest.unit.config.js",
    "test:integration": "jest --config=tests/jest.integration.config.js",
    "test:e2e": "cypress run",
    "test:security": "npm audit && snyk test",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "migrate": "knex migrate:latest --knexfile database/knexfile.js",
    "seed": "knex seed:run --knexfile database/knexfile.js",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "generate:service": "node scripts/generate-service.js",
    "generate:api": "node scripts/generate-api.js",
    "generate:tests": "node scripts/generate-tests.js",
    "docs:api": "swagger-jsdoc -d docs/swagger.json -o docs/api.json backend/**/*.js",
    "docs:build": "docusaurus build",
    "docs:serve": "docusaurus serve"
  },
  "keywords": [
    "fintech",
    "ai-development",
    "payment-processing",
    "microservices",
    "tutorial"
  ],
  "author": "AI-Driven Development Course",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "stripe": "^14.11.0",
    "pg": "^8.11.3",
    "redis": "^4.6.11",
    "joi": "^17.11.0",
    "winston": "^3.11.0",
    "rate-limiter-flexible": "^4.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.4",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "cypress": "^13.6.1",
    "eslint": "^8.55.0",
    "@typescript-eslint/parser": "^6.13.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "snyk": "^1.1272.0",
    "docker-compose": "^0.24.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamsalah13/dev-ai-enable.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}