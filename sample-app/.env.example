# Database Configuration
DATABASE_URL=postgresql://payflow:payflow_password@localhost:5432/payflow_dev
TEST_DATABASE_URL=postgresql://payflow:payflow_password@localhost:5432/payflow_test

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=24h
BCRYPT_ROUNDS=12

# Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email Service
SENDGRID_API_KEY=SG.your_sendgrid_api_key
FROM_EMAIL=noreply@payflow.example.com

# SMS/Phone Service
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# External Service APIs
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENVIRONMENT=sandbox

# Identity Verification
JUMIO_API_TOKEN=your_jumio_api_token
JUMIO_API_SECRET=your_jumio_api_secret
JUMIO_DATACENTER=US

# Fraud Prevention
SIFT_API_KEY=your_sift_api_key
SIFT_ACCOUNT_ID=your_sift_account_id

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn
NEW_RELIC_LICENSE_KEY=your_new_relic_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3100,http://localhost:3000
CORS_CREDENTIALS=true

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
AWS_S3_BUCKET=payflow-uploads
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
DATA_ENCRYPTION_ALGORITHM=aes-256-gcm

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=1800000

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Development Tools
DEBUG=payflow:*
ENABLE_CORS=true
TRUST_PROXY=true

# Testing Configuration
TEST_TIMEOUT=30000
JEST_TIMEOUT=30000

# Docker Configuration
COMPOSE_PROJECT_NAME=payflow
POSTGRES_DB=payflow_dev
POSTGRES_USER=payflow
POSTGRES_PASSWORD=payflow_password

# Frontend Configuration (React)
REACT_APP_API_URL=http://localhost:3000
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=1.0.0

# Analytics and Tracking
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_BIOMETRIC_AUTH=false
ENABLE_CRYPTO_PAYMENTS=false
ENABLE_INTERNATIONAL_TRANSFERS=false
ENABLE_INVESTMENT_FEATURES=false

# Compliance and Audit
AUDIT_LOG_RETENTION_DAYS=2555
PCI_COMPLIANCE_MODE=true
GDPR_COMPLIANCE_MODE=true
SOX_COMPLIANCE_MODE=true

# Business Rules
MIN_LOAN_AMOUNT=1000
MAX_LOAN_AMOUNT=50000
MIN_LOAN_TERM_MONTHS=12
MAX_LOAN_TERM_MONTHS=60
DEFAULT_INTEREST_RATE=0.15

# KYC/AML Settings
KYC_REQUIRED_AMOUNT=2000
AML_SCREENING_ENABLED=true
SANCTIONS_SCREENING_ENABLED=true

# Notification Settings
EMAIL_NOTIFICATIONS_ENABLED=true
SMS_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=false

# Performance Settings
CONNECTION_POOL_SIZE=20
QUERY_TIMEOUT=30000
REQUEST_TIMEOUT=30000

# Cache Settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000